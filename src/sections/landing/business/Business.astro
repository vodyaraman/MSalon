---
import "./index.scss";
---

<section class="business">
    <h2 class="business__title">Контакты и запись</h2>
    <article class="business__content">
        <div class="business__card">
            <p class="business__name">Салон красоты Марины Севостьяновой</p>
            <p class="business__address">Москва, ул. Малая Бронная, 24</p>
            <p class="business__phone">+7 (495) 123-45-67</p>
            <p class="business__email">luxelook@example.ru</p>
            <p class="business__hours">Ежедневно: 10:00 — 21:00</p>
        </div>

        <form class="business__form">
            <input type="text" placeholder="Ваше имя" required />
            <input type="tel" placeholder="Телефон" required />
            <input type="text" placeholder="Желаемая услуга" />
            <textarea placeholder="Комментарий"></textarea>
            <button type="submit">Записаться</button>
        </form>
    </article>
</section>
