---
import SmoothScrollEffect from "@/components/animations/SmoothScrollEffect";
import "./index.scss";

const { servicesList } = Astro.props;
---

<section class="allservices">
  {servicesList.map((category: any) => (
    <section class="allservices__content">
      <header>
        <h2 class="allservices__title">{category.category}</h2>
        <p class="allservices__description">{category.description}</p>
      </header>

      <ul class="allservices__services">
        {category.services.map((service: any) => (
          <li class="allservices__service">
            <article>
              <header>
                <h3 class="allservices__service-name">{service.name}</h3>   
              </header>
              <p class="allservices__service-description">{service.description}</p>
              <p class="allservices__service-price">{service.price} â‚½</p>
            </article>
          </li>
        ))}
      </ul>
    </section>
  ))}
</section>

<SmoothScrollEffect client:only/>
